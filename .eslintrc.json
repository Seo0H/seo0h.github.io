{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": ["import"],
  "extends": ["eslint:recommended", "plugin:react/recommended", "next/core-web-vitals"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "import/order": [
      "warn",
      {
        "newlines-between": "always-and-inside-groups",
        "pathGroups": [
          {
            "pattern": "react",
            "group": "builtin",
            "position": "before"
          },
          {
            "pattern": "contentlayer/generated",
            "group": "external",
            "position": "after"
          }
        ],
        "pathGroupsExcludedImportTypes": ["react"],
        "groups": [
          ["builtin", "external"],
          ["internal", "parent", "index"],
          ["sibling", "type", "object"]
        ],
        "alphabetize": {
          "order": "asc"
        }
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": "true",
      "node": "true"
    }
  }
}
